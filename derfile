# [https://github.com/ThyW/der/]
$hosts = legionnaire, terminator
$outdir = env`HOME`

# alacritty
[alacritty/alacritty.yml.t]
hostnames = $hosts
final_name = alacritty.yml
apply_path = $outdir:/.config/alacritty/

